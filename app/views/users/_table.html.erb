  <tr class="header">
    <th>Username</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Active</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr id="user-tr-<%= user.id %>" class="<%= cycle "tr0", "tr1" %>">
    <td><%= raw(chop_for_html(user.username)) %></td>
    <td><%= raw(chop_for_html(user.first_name)) %></td>
    <td><%= raw(chop_for_html(user.last_name)) %></td>
    <td><%= yes_no user.is_active %></td>
    <td><%= yes_no user.is_admin %></td>
    <td><a href="<%= "/users/#{user.id}" %>" class="user-show btn btn-small" title="Show"><i class="icon-zoom-in"></i></a></td>
    <td><a href="<%= edit_user_path(user) %>" class="user-edit btn btn-small" title="Edit"><i class="icon-edit"></i>Edit</a></td>
    <td><a href="<%= "/users/#{user.id}" %>" class="user-destroy btn btn-small" title="Delete"><i class="icon-trash"></i></a></td>
  </tr>
<% end %>
