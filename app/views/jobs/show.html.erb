<p id="notice"><%= notice %></p>

<p>
  <b>Smoke test:</b>
  <%= @job.smoke_test.description %>
</p>

<% if @job.smoke_test.branch_url %>
  <b>Branch Url:</b>
  <%= @job.smoke_test.branch_url %>
<% end %>

<p>
  <b>Status:</b>
  <%= @job.status %>
</p>

<p>
  <b>Msg:</b>
  <%= @job.msg %>
</p>

<p>
  <b>Stdout:</b><br/>
<textarea rows="10" cols="80">
  <%= @job.stdout %>
</textarea>
</p>

<p>
  <b>Stderr:</b><br/>
<textarea rows="10" cols="80">
  <%= @job.stderr %>
</textarea>
</p>
