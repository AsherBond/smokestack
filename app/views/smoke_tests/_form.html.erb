   <button style="float: right" title="Override Cookbook URL" class="btn" onclick='$("#cookbook-url-div").toggle(); $(this).hide(); return false;'>Override Cookbook URL</button>
<% else %>
  <% cookbook_url_div = "" %>
<% end %>
