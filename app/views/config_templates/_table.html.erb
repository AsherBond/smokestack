<% @config_templates.each do |config_template| %>
  <tr id="config-template-tr-<%= config_template.id %>" class="<%= cycle "tr0", "tr1" %>">
    <td><%= raw(chop_for_html(config_template.name, 40)) %></td>
    <td><%= raw(chop_for_html(config_template.description, 60)) %></td>
    <td><%= yes_no(config_template.enabled) %></td>
    <td><%= link_to 'Show', config_template, :class => "config-template-show" %></td>
    <td><%= link_to 'Edit', edit_config_template_path(config_template), :class => "config-template-edit" %></td>
    <td><%= link_to 'Destroy', config_template, :confirm => 'Are you sure?', :method => :delete, :class => "config-template-destroy" %></td>
  </tr>
<% end %>
