if ! is_master "$SWIFT_URL" "$SWIFT_GIT_MASTER" "$SWIFT_BRANCH"; then

  TESTS_RUN=$(( $TESTS_RUN + 1 ))
  if [ -n "$SWIFT_URL" ]; then
