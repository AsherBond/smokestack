TMP_DIR=/tmp/smokestack_unittest
rm -Rf "$TMP_DIR"
mkdir -p "$TMP_DIR"

function override_sudo {
  # test suites should stub out sudo. If it is called return an exit status.
  mkdir "$TMP_DIR/bin" && cd "$TMP_DIR/bin"
  echo "#!/bin/bash" > sudo
  echo "/bin/false" >> sudo
  chmod 755 sudo
  export PATH="$TMP_DIR/bin:$PATH"
}

function tox_cache_dir {
  local PROJECT_NAME=$1
  local CACHE_MD5_TMP=$(mktemp)
  echo "$PROJECT_NAME" > $CACHE_MD5_TMP
  cat tools/*requires >> $CACHE_MD5_TMP
  local MD5_SUM=$(md5sum $CACHE_MD5_TMP | cut -f 1 -d ' ')
  echo "/tmp/$PROJECT_NAME-$MD5_SUM"
}

function cache_tox {
  local PROJECT_NAME=$1
  local CACHE_DIR=$(tox_cache_dir "$PROJECT_NAME")
  if [ ! -d "$CACHE_DIR"  ]; then
    rm -Rf .tox/dist
    cp -r .tox $CACHE_DIR
  fi
}

function get_tox_from_cache {
  local PROJECT_NAME=$1
  local CACHE_DIR=$(tox_cache_dir "$PROJECT_NAME")
  if [ -d "$CACHE_DIR"  ]; then
    echo "Using cached .tox directory.."
    cp -r $CACHE_DIR .tox
  fi
}

function is_master {
  local PROJ_URL=$1
  local MASTER_URL=$2
  local BRANCH=$3
  [ "$PROJ_URL" == "$MASTER_URL" ] && [ "$BRANCH" == "master" ]
}

function handle_venv_results {
  local PROJECT=$1
  local FILENAME=$2
  local SEARCH_STR="$PROJECT development environment setup is complete"
  grep -q "$SEARCH_STR" $FILENAME
  if [ $? -eq 0 ]; then # print from SEARCH_STR to end of the file
    perl -ne "print if /$SEARCH_STR/ .. 0" $FILENAME
  else
    # cat test output excluding the environment
    cat $FILENAME | grep -v env=
  fi
}

